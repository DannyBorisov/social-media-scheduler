{
  "name": "social-scheduler",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "start:api": "npm run start --workspace=packages/api",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:app": "npm run dev --workspace=packages/app",
    "build:api": "npm run build --workspace=packages/api",
    "build:app": "npm run build --workspace=packages/app"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
